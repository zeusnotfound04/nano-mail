generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model emails {
  id         Int       @id @default(autoincrement())
  sender     String?
  recipients String[]
  subject    String?
  body       String?
  size       BigInt?
  created_at DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("emails")
  @@index([recipients])
}
